<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">1015</defaultcontrol>
    <onload condition="!Player.PauseEnabled">SetFocus(1016)</onload>
	<onload>ClearProperty(AutoCloseMusicOSD,Home)</onload>
	<onunload>ClearProperty(PopupMenuActive,Home)</onunload>
    <include>OSDFade</include>
    <controls>
        
        <control type="slider">
		    <left>30</left>
		    <include condition="Skin.HasSetting(enable.bottomseekbar)">LowerMusicOSDSlider</include>
		    <include condition="!Skin.HasSetting(enable.bottomseekbar)">RegularMusicOSDSlider</include>
		    <width>1570</width>
	        <height>36</height>
		    <onup>noop</onup>
		    <ondown>100</ondown>
		    <info>Player.Progress</info>
		    <action>seek</action>
		    <texturesliderbar/>
            <textureslidernib/>
            <textureslidernibfocus/>
		    <visible>Player.SeekEnabled + ![$EXP[showCompactSeekBar]]</visible>
		</control>
		
		<include condition="!Skin.HasSetting(UseCompactOSD)">StandardMusicOSDButtons</include>
		<include condition="Skin.HasSetting(UseCompactOSD)">CompactMusicOSDButtons</include>

    </controls>
</window>