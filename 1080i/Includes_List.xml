		        <font>font16</font>
		        <scroll>$VAR[LongLabelScroll]</scroll>
		        <aligny>center</aligny>
		        <label>$VAR[panelheading]</label>
	        </control>
	        <control type="label">
		        <visible>!$PARAM[isfocused]</visible>
		        <posx>$PARAM[left]</posx>
		        <posy>53</posy>
		        <height>40</height>
		        <width>$PARAM[width]</width>
		        <font>ListDetails</font>
		        <aligny>center</aligny>
		        <align>left</align>
				<scroll>$VAR[LongLabelScroll]</scroll>
